<%= form_for @counter do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :maint_code %><br />
    <%= f.text_field :maint_code %>
  </p>
  <p><%= f.submit %></p>
<% end %>
