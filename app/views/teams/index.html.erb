<br />

<table class="table-condensed table-striped">
  <tr>
    <th>Team</th>
    <th>Name</th>
  </tr>
  <% for team in @teams %>
    <tr>
      <td><%= team.team_id %></td>
      <td><%= team.name %></td>
      <td><%= link_to edit_team_path(team) do %><span class="glyphicon glyphicon-edit"></span>
      <% end %></td>
      <td><%= link_to team, :confirm => 'Are you sure?', :method => :delete do %><span class="glyphicon glyphicon-trash"></span>
      <% end %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Team", new_team_path %></p>
