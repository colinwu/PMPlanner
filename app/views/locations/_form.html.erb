<%= simple_form_for @location do |f| %>
  <%= f.error_notification %>
    <%= f.input :address1, label: "Address line 1" %>
    <%= f.input :address2, label: "Address line 2" %>
    <%= f.input :city %>
    <%= f.input :province %>
    <%= f.input :post_code, label: "Postal code" %>
    <%= f.input :notes %>
    <%= f.association :team, collection: Team.order(:name) %>
    <%= f.association :client, collection: Client.order(:name) %>
    <%= f.button :submit %>
<% end %>
