<% title 'Select Tech to Transfer Territory To' %>

<%= form_tag transfer_territory_technicians_path, {:id => 'from_select', class: "navbar-form"} do %>
Select the technician to transfer <%= @from_tech.full_name %>'s territory to
      <%= hidden_field_tag 'from_tech_id', session[:from_tech_id] %>
      <%= select_tag :to_tech_id, options_from_collection_for_select(current_user.my_techs.order(:friendly_name), :id, :friendly_name), {include_blank: false, class: "form-control"} %>

      <%= submit_tag "Transfer"%>
    <% end %>