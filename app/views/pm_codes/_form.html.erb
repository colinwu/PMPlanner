<%= form_for @pm_code do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :description %><br />
  <%= f.text_field :description %>
  </p>
  <p>
  <%= f.label :colorclass %><br />
  <%= f.text_field :colorclass %>
  </p>
  <p><%= f.submit %></p>
<% end %>
